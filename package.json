{
  "name": "artemis",
  "description": "Git-based headless CMS frontend",
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "changes": "changeset",
    "bump": "pnpm version patch --workspaces",
    "release": "turbo run build && changeset version && pnpm install && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "turbo": "^1.6.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
